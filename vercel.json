{
  "framework": "nextjs",
  "buildCommand": "prisma generate && next build",
  "devCommand": "npm run dev",
  "installCommand": "npm install && prisma generate",
  "functions": {
    "src/app/api/**/*.js": {
      "maxDuration": 30
    }
  },

  "regions": ["iad1"],
  "rewrites": [
    {
      "source": "/uploads/(.*)",
      "destination": "/api/uploads/$1"
    }
  ]
} 