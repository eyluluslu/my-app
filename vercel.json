{
  "framework": "nextjs",
  "buildCommand": "next build",
  "installCommand": "npm install",
  "functions": {
    "src/app/api/**/*.js": {
      "maxDuration": 30
    }
  },
  "regions": ["iad1"],
  "rewrites": [
    {
      "source": "/uploads/(.*)",
      "destination": "/api/uploads/$1"
    }
  ]
} 